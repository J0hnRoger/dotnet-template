{
  "$schema": "http://json.schemastore.org/template",
  "author": "John Roger",
  "classifications": [
    "Web",
    "FrontEnd",
    "React",
    "Redux",
    "Clean Architecture"
  ],
  "name": "React Solution Templates",
  "description": "A pragmatic React / Redux solution with Clean Architecture and functional programming in mind",
  "identity": "DotNet.Architecture.Solution.React",
  "groupIdentity": "DotNet.Architecture.FrontEnd",
  "shortName": "dotnet-react",
  "tags": {
    "language": "TS",
    "type": "project"
  },
  "sourceName": "ReactTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "AppAuthentication": {
        "type": "parameter",
        "datatype": "bool",
        "defaultValue": false,
        "description": "Include MSAL authentication.",
        "condition": "(Variant == 'PaaS')"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**/*",
        "templates/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec",
        ".vs/**",
        ".git/**",
        ".idea/**",
        ".scripts/publish.ps1"
      ],
      "rename": {
        "README-template.md": "README.md"
      },
      "modifiers": [
        {
          "exclude": []
        }
      ]
    }
  ]
}
